@model MainDetailsViewModel

@{
    ViewBag.Title = "Detalles del miembro";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Member.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/circleCode.jpg" />

                <h4>ID : @Model.Member.Id</h4>
                <h4>Nombre : @Model.Member.Name</h4>
                <h4>Alias : @Model.Member.Alias</h4>
                <h4>Rol : @Model.Member.Role</h4>
                <h4>Descripción : @Model.Member.Description</h4>
            </div>

            <div class="card-footer text-center">
                <a asp-controller="Main" asp-action="Index" class="btn btn-primary">Volver</a>
                <a href="#" class="btn btn-primary">Editar</a>
                <a href="#" class="btn btn-primary">Eliminar</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}
